<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:cpv="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/userName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/logon1"
        android:text="张绕绕"
        android:gravity="center"
        android:fontFamily="sans-serif-black"
        android:textColor="#000" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:scrollbars="none"
        app:layout_constraintBottom_toTopOf="@id/personHealth"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/userName"
        app:layout_constraintVertical_bias="0.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/title1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="健康状态"
                android:textColor="#000"
                android:background="#1111"
                android:textSize="18sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <com.example.quickapp.CircleProgressView
                app:layout_constraintTop_toBottomOf="@id/title1"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_height="0dp"
                android:layout_width="0dp"
                android:id="@+id/circle_progress"
                app:layout_constraintHeight_percent="0.3"
                app:layout_constraintWidth_percent="0.35"
                app:roundWidth="15dp"
                app:innerCicleColor="#fff"
                app:outCicleColor="#9ACD32"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintHeight_percent="0.3"
                app:layout_constraintWidth_percent="0.65"
                app:layout_constraintLeft_toRightOf="@id/circle_progress"
                app:layout_constraintTop_toBottomOf="@id/title1"
                android:id="@+id/content1"
                android:textColor="#9ACD32"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/title2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="#1111"
                android:gravity="center"
                android:text="疾病风险"
                android:textColor="#000"
                android:textSize="18sp"
                app:layout_constraintHeight_percent="0.05"
                app:layout_constraintTop_toBottomOf="@id/circle_progress" />

            <androidx.cardview.widget.CardView
                android:id="@+id/card2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="12dp"
                app:layout_constraintTop_toBottomOf="@id/title2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/content2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#fff"
                        android:text="1.【主要表现】"
                        android:textColor="#000"
                        android:textSize="18sp"
                        android:minLines="3"/>

                    <TextView
                        android:id="@+id/content2_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#fff"
                        android:text=""
                        android:textColor="#000"
                        android:textSize="18sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/title3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="#1111"
                android:gravity="center"
                android:text="健康建议"
                android:textColor="#000"
                android:textSize="18sp"
                app:layout_constraintHeight_percent="0.05"
                app:layout_constraintTop_toBottomOf="@id/card2" />

            <androidx.cardview.widget.CardView
                android:id="@+id/card3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="12dp"
                app:layout_constraintTop_toBottomOf="@id/title3">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/content3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#fff"
                        android:text="1."
                        android:textColor="#000"
                        android:textSize="18sp"
                        android:minLines="3"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <TextView
    android:id="@+id/personHealth"
    android:layout_width="0dp"
    android:layout_height="0dp"
    app:layout_constraintWidth_percent="0.25"
    app:layout_constraintHeight_percent="0.15"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    android:text="健康状况"
    android:textSize="16sp"
    android:textColor="#169ee5"
    android:background="#fff"
    android:drawableTop="@drawable/color_authority_success"
    android:gravity="center"/>

    <TextView
        android:id="@+id/question"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/personHealth"
        android:text="问卷信息"
        android:textSize="16sp"
        android:textColor="#000000"
        android:background="#fff"
        android:drawableTop="@drawable/color_question"
        android:gravity="center"/>
    <TextView
        android:id="@+id/equipment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/question"
        android:text="设备信息"
        android:textSize="16sp"
        android:textColor="#000000"
        android:background="#fff"
        android:drawableTop="@drawable/color_wait"
        android:gravity="center"/>

    <TextView
        android:id="@+id/pinformation"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/equipment"
        android:text="个人信息"
        android:textSize="16sp"
        android:textColor="#000000"
        android:background="#fff"
        android:drawableTop="@drawable/color_user"
        android:gravity="center"/>

</androidx.constraintlayout.widget.ConstraintLayout>
